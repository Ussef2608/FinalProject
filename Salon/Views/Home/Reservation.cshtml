<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Récupère le message de succès dans le div masqué
        var alertDiv = document.getElementById("successAlert");
        var successMessage = alertDiv ? alertDiv.textContent.trim() : null;

        if (successMessage) {
            // Si le message existe, affiche l'alerte SweetAlert
            Swal.fire({
                position: "top-end",
                icon: "success",
                title: successMessage,
                showConfirmButton: false,
                timer: 1500
            });

            // Affiche le div (optionnel si JS est désactivé)
            alertDiv.classList.remove("d-none");
        }
    });
</script>
