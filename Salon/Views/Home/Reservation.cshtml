    <div class="reservation-section py-5" id="Reservation">
        <div class="container">
            <div class="row align-items-center">
                <!-- Texte d'introduction -->
                <div class="col-lg-4">
                    <h2 class="reservation-title">Book an appointment online</h2>
                    <p class="reservation-description">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut elit tellus, luctus nec ullamcorper mattis.
                    </p>
                </div>

                <!-- Formulaire de réservation -->
                <div class="col-lg-8">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center d-none " style="display:none" id="successAlert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger text-center">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    <form class="reservation-form" action="/Reservation/Create" method="POST">
                        <div class="row">
                            <!-- Champ Nom -->
                            <div class="col-md-4 mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text"
                                       id="name"
                                       name="Name"
                                       class="form-control"
                                       placeholder="Ex. John"
                                       required
                                       maxlength="50">
                            </div>

                            <!-- Champ Email -->
                            <div class="col-md-4 mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email"
                                       id="email"
                                       name="Email"
                                       class="form-control"
                                       placeholder="example@email.com"
                                       required>
                            </div>

                            <!-- Champ Téléphone -->
                            <div class="col-md-4 mb-3">
                                <label for="phone" class="form-label">Phone Number</label>
                                <input type="tel"
                                       id="phone"
                                       name="PhoneNumber"
                                       class="form-control"
                                       placeholder="(083) 632-5556"
                                       pattern="\(\d{3}\)\s\d{3}-\d{4}"
                                       required>
                                <small class="form-text text-muted">Format: (083) 632-5556</small>
                            </div>

                            <!-- Champ Sélection de Service -->
                            <div class="col-md-4 mb-3">
                                <label for="service" class="form-label">Select Service</label>
                                <select id="service"
                                        name="Service"
                                        class="form-control"
                                        required>
                                    <option value="" disabled selected>Select Service</option>
                                    <option value="Haircut">Haircut</option>
                                    <option value="Coloring">Coloring</option>
                                    <option value="Styling">Styling</option>
                                </select>
                            </div>

                            <!-- Champ Date -->
                            <div class="col-md-4 mb-3">
                                <label for="date" class="form-label">Pick Date</label>
                                <input type="Date"
                                       id="date"
                                       name="Date"
                                       class="form-control"
                                       min="2024-01-01"
                                       required>
                            </div>

                            <!-- Champ Horaire -->
                            <div class="col-md-4 mb-3">
                                <label for="schedule" class="form-label">Schedule</label>
                                <input type="Time"
                                       id="schedule"
                                       name="Schedule"
                                       class="form-control"
                                       required>
                            </div>

                            <!-- Bouton Soumettre -->
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-reservation mt-3">MAKE RESERVATION</button>
                            </div>
                        </div>
                    </form>

                </div>
