@model Salon.ViewModel.ServiceViewModel

<div class="container py-4">
    <h2 class="text-center mb-4">Modifier le Service</h2>

    <form asp-action="EditService" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Nom"></label>
            <input asp-for="Nom" class="form-control" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Prix"></label>
            <input asp-for="Prix" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Prix" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TypeDeSoins"></label>
            <input asp-for="TypeDeSoins" class="form-control" />
            <span asp-validation-for="TypeDeSoins" class="text-danger"></span>
        </div>

        <!-- Affichage de l'image actuelle -->
        <div class="form-group">
            <label>Image actuelle</label>
            <div>
                <img src="@Url.Content("~/images/services/" + Model.ImagePath)" alt="Image actuelle" style="max-width: 150px; max-height: 150px;" />
            </div>
        </div>

        <!-- Champ pour télécharger une nouvelle image -->
        <div class="form-group">
            <label asp-for="ImageFile">Télécharger une nouvelle image (facultatif)</label>
            <input asp-for="ImageFile" type="file" class="form-control" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Modifier</button>
    </form>

</div>
