@model IEnumerable<Fournisseur>

<h2>Liste des Fournisseurs</h2>

<a asp-action="CreateFournisseur" class="btn btn-primary">Ajouter un Fournisseur</a>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Adresse</th>
            <th>Contact</th>
            <th>Ville</th>
            <th>Pays</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fournisseur in Model)
        {
            <tr>
                <td>@fournisseur.Nom</td>
                <td>@fournisseur.Contact</td>
                <td>@fournisseur.Email</td>
                <td>@fournisseur.Adresse</td>
                <td>@fournisseur.Contact</td>
                <td>@fournisseur.Ville</td>
                <td>@fournisseur.Pays</td>
                <td>
                    <a asp-action="EditFournisseur" asp-route-id="@fournisseur.Id" class="btn btn-warning">Modifier</a>
                    <a asp-action="DeleteFournisseur" asp-route-id="@fournisseur.Id" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
